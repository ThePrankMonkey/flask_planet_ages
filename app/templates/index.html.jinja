{% extends "base.html.jinja" %}

{% block content %}
    <h1>Enter Your Birthday</h1>
    <form action="" method="post" novalidate>
        {{ form.hidden_tag() }}
        <p>
            {{ form.birthday.label }}<br>
            {{ form.birthday() }}<br>
            {% for error in form.birthday.errors %}
            <span style="color: red;">[{{ error }}]</span>
            {% endfor %}
        <p>{{ form.submit() }}</p>
    </form>
{% endblock %}